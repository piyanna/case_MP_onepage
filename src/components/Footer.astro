<style>
  footer {
    background-color: #FDD3BB;
    color: #3F0F0B;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    text-align: center;
    padding: 40px;
}

.footer-title {
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 20px;
}
  
.hours p {
    display: flex;
    justify-content: space-between;
    max-width: 300px;
    margin: 5px auto;
    font-size: 18px;
    font-weight: bold;
}
.hours span {
    color: #3C1E1E;
}

.contact {
    margin-top: 20px;
    padding: 10px;
    border: 2px solid #3C1E1E;
    display: inline-block;
    border-radius: 5px;
}
.call-text {
    font-weight: bold;
    font-size: 18px;
}

.phone-number {
    font-size: 22px;
    font-weight: bold;
    color: #3C1E1E;
}

.social-icons {
    margin-top: 20px;
}

.social-icons a {
    margin: 0 10px;
    display: inline-block;
}

.social-icons img {
    width: 30px;
    height: 30px;
    filter: invert(20%);
}
  ul {
    list-style-type: none;
    line-height: 2rem;
    padding-inline-start: 0;
  }
  button {
    margin-top: 1rem;
  }

  a {
    color: #3F0F0B;
    text-decoration: none;
  }

  .info {
    display: flex;
    gap: 4rem;
  }

  @media screen and (max-width: 650px) {
    footer {
      padding: 2rem;
      flex-direction: column;
    }
  }
</style>
