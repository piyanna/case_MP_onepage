<style>
  footer {
    background-color: #f6d5c3;
    color: #3f0f0b;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 40px;
  }

  .footer {
    max-width: 600px;
  }

  .footer-title {
    font-size: 36px;
    font-weight: bold;
    margin-bottom: 20px;
  }

  .hours p {
    display: flex;
    justify-content: space-between;
    font-size: 18px;
    font-weight: bold;
    margin: 8px 0;
  }

  .hours span {
    color: #3c1e1e;
  }

  .contact {
    margin-top: 20px;
    padding: 15px;
    display: inline-block;
    border-radius: 5px;
  }

  .call-text {
    font-weight: bold;
    font-size: 18px;
  }

  .phone-number {
    font-size: 24px;
    font-weight: bold;
    color: #3c1e1e;
  }

  .social-icons {
    margin-top: 20px;
  }

  .social-icons a {
    margin: 0 10px;
    display: inline-block;
  }

  .social-icons img {
    width: 35px;
    height: 35px;
  }

  @media screen and (max-width: 650px) {
    footer {
      padding: 2rem;
    }
  }
</style>
