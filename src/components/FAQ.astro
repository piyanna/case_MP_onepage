---
import FaqButton from '../components/FaqButton.astro';

const { collapsible, content } = Astro.props;
let isOpen = false;
---

<div class="faq-container">
  <div class="faq-header" on:click={() => (isOpen = !isOpen)}>
    <FaqButton isOpen={isOpen} />
    <span class="collapsible-text">{collapsible}</span>
  </div>
  <div class="content" class:list={[isOpen ? "show" : ""]}>
    <p>{content}</p>
  </div>
</div>

<style>
  /* FAQ Container */
  .faq-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 0 18px;
    text-align: left;
  }

  /* FAQ Header */
  .faq-header {
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: #FAD6C5;
    padding: 18px;
    cursor: pointer;
    font-weight: 700;
    color: #3F0F0B;
  }

  /* Indhold styling */
  .content {
    padding: 12px;
    display: none; /* Skjult som standard */
    background-color: #FFFFFF;
    font-weight: 400;
    font-size: 14px;
    color: #3F0F0B;
  }

  .content.show {
    display: block; /* Vises n√•r isOpen er true */
  }
</style>
